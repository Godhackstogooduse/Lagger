local Players = game:GetService("Players")
local UIS = game:GetService("UserInputService")
local RunService = game:GetService("RunService")
local player = Players.LocalPlayer

-- UI Parent
local parentUI = (game:GetService("CoreGui") or player:WaitForChild("PlayerGui"))

-- CLEANUP
if parentUI:FindFirstChild("AbyssNoReset") then parentUI.AbyssNoReset:Destroy() end

-- SETTINGS (Persists)
_G.AbyssSpeed = 16
_G.AbyssLagValue = 0
_G.LagEnabled = false

-- UI SETUP
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "AbyssNoReset"
screenGui.ResetOnSpawn = false 
screenGui.Parent = parentUI

local main = Instance.new("Frame")
main.Size = UDim2.new(0, 240, 0, 300)
main.Position = UDim2.new(1, -260, 0.5, -150) -- MIDDLE RIGHT
main.BackgroundColor3 = Color3.fromRGB(15, 15, 22)
main.BorderSizePixel = 0
main.Parent = screenGui

local corner = Instance.new("UICorner")
corner.CornerRadius = UDim.new(0, 10)
corner.Parent = main

local stroke = Instance.new("UIStroke")
stroke.Thickness = 2
stroke.Color = Color3.fromRGB(120, 80, 255)
stroke.Parent = main

-- TITLE
local title = Instance.new("TextLabel")
title.Size = UDim2.new(1, 0, 0, 45)
title.Text = "ABYSS V10 [NO-RESET]"
title.TextColor3 = Color3.fromRGB(255, 255, 255)
title.BackgroundColor3 = Color3.fromRGB(30, 30, 45)
title.Font = Enum.Font.GothamBold
title.TextSize = 14
title.Parent = main

-- SPEED INPUT
local speedBox = Instance.new("TextBox")
speedBox.Size = UDim2.new(0.9, 0, 0, 40)
speedBox.Position = UDim2.new(0.05, 0, 0, 60)
speedBox.BackgroundColor3 = Color3.fromRGB(40, 40, 55)
speedBox.Text = tostring(_G.AbyssSpeed)
speedBox.TextColor3 = Color3.new(1, 1, 1)
speedBox.Font = Enum.Font.Gotham
speedBox.PlaceholderText = "Speed..."
speedBox.Parent = main
Instance.new("UICorner", speedBox).CornerRadius = UDim.new(0, 6)

-- LAG TOGGLE (THE NEW SYNC VERSION)
local lagToggle = Instance.new("TextButton")
lagToggle.Size = UDim2.new(0.9, 0, 0, 50)
lagToggle.Position = UDim2.new(0.05, 0, 0, 115)
lagToggle.BackgroundColor3 = Color3.fromRGB(180, 50, 50)
lagToggle.Text = "PACKET LAG: OFF"
lagToggle.TextColor3 = Color3.new(1, 1, 1)
lagToggle.Font = Enum.Font.GothamBold
lagToggle.Parent = main
Instance.new("UICorner", lagToggle).CornerRadius = UDim.new(0, 8)

-- INTENSITY SLIDER
local lagLabel = Instance.new("TextLabel")
lagLabel.Size = UDim2.new(1, 0, 0, 20)
lagLabel.Position = UDim2.new(0, 0, 0, 175)
lagLabel.Text = "INTENSITY: 0%"
lagLabel.TextColor3 = Color3.fromRGB(180, 180, 255)
lagLabel.BackgroundTransparency = 1
lagLabel.Font = Enum.Font.GothamBold
lagLabel.TextSize = 10
lagLabel.Parent = main

local sliderFrame = Instance.new("Frame")
sliderFrame.Size = UDim2.new(0.85, 0, 0, 8)
sliderFrame.Position = UDim2.new(0.075, 0, 0, 200)
sliderFrame.BackgroundColor3 = Color3.fromRGB(50, 50, 70)
sliderFrame.Parent = main

local sliderFill = Instance.new("Frame")
sliderFill.Size = UDim2.new(0, 0, 1, 0)
sliderFill.BackgroundColor3 = Color3.fromRGB(120, 80, 255)
sliderFill.BorderSizePixel = 0
sliderFill.Parent = sliderFrame

local knob = Instance.new("TextButton")
knob.Size = UDim2.new(0, 16, 0, 16)
knob.Position = UDim2.new(0, -8, 0.5, -8)
knob.BackgroundColor3 = Color3.new(1, 1, 1)
knob.Text = ""
knob.Parent = sliderFill
Instance.new("UICorner", knob).CornerRadius = UDim.new(1, 0)

-- LOGIC: SMOOTH SYNC (PREVENTS RESET)
local function setLag(enabled)
    local char = player.Character
    local hrp = char and char:FindFirstChild("HumanoidRootPart")
    
    if enabled then
        _G.LagEnabled = true
        lagToggle.Text = "PACKET LAG: ACTIVE"
        lagToggle.BackgroundColor3 = Color3.fromRGB(50, 180, 50)
        settings().Network.IncomingReplicationLag = _G.AbyssLagValue
    else
        -- PREVENT RESET LOGIC
        lagToggle.Text = "SYNCING (STAY STILL)..."
        lagToggle.BackgroundColor3 = Color3.fromRGB(200, 150, 0)
        
        -- Anchor briefly so the server doesn't kill you for teleporting
        if hrp then hrp.Anchored = true end 
        
        settings().Network.IncomingReplicationLag = 0
        _G.LagEnabled = false
        
        task.wait(0.6) -- Give the packets time to dump
        
        if hrp then hrp.Anchored = false end
        lagToggle.Text = "PACKET LAG: OFF"
        lagToggle.BackgroundColor3 = Color3.fromRGB(180, 50, 50)
    end
end

-- SLIDER LOGIC
local sliding = false
knob.MouseButton1Down:Connect(function() sliding = true end)
UIS.InputEnded:Connect(function(input) if input.UserInputType == Enum.UserInputType.MouseButton1 then sliding = false end end)

UIS.InputChanged:Connect(function(input)
    if sliding and input.UserInputType == Enum.UserInputType.MouseMovement then
        local mousePos = UIS:GetMouseLocation().X
		local framePos = sliderFrame.AbsolutePosition.X
		local frameWidth = sliderFrame.AbsoluteSize.X
		local percentage = math.clamp((mousePos - framePos) / frameWidth, 0, 1)
        
        sliderFill.Size = UDim2.new(percentage, 0, 1, 0)
        lagLabel.Text = "INTENSITY: " .. math.floor(percentage * 100) .. "%"
        _G.AbyssLagValue = percentage * 25
        if _G.LagEnabled then settings().Network.IncomingReplicationLag = _G.AbyssLagValue end
    end
end)

-- TOGGLE CLICK
lagToggle.MouseButton1Click:Connect(function()
    setLag(not _G.LagEnabled)
end)

-- FORCED SPEED LOOP
RunService.RenderStepped:Connect(function()
    _G.AbyssSpeed = tonumber(speedBox.Text) or 16
    local char = player.Character
    if char and char:FindFirstChild("Humanoid") then
        char.Humanoid.WalkSpeed = _G.AbyssSpeed
    end
end)

-- EMERGENCY BUTTON
local em = Instance.new("TextButton")
em.Size = UDim2.new(0.9, 0, 0, 35)
em.Position = UDim2.new(0.05, 0, 0, 245)
em.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
em.Text = "STUCK? CLICK TO UN-ANCHOR"
em.TextColor3 = Color3.new(0.8, 0, 0)
em.Font = Enum.Font.Gotham
em.Parent = main
em.MouseButton1Click:Connect(function()
    local hrp = player.Character and player.Character:FindFirstChild("HumanoidRootPart")
    if hrp then hrp.Anchored = false end
    settings().Network.IncomingReplicationLag = 0
    _G.LagEnabled = false
    lagToggle.Text = "PACKET LAG: OFF"
    lagToggle.BackgroundColor3 = Color3.fromRGB(180, 50, 50)
end)
